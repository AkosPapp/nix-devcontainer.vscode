{
    "name": "nix-devcontainer",
    "displayName": "Nix Devcontainer",
    "description": "Automatically creates shell scripts from nix print-dev-env output for Nix-based development containers.",
    "version": "0.0.2",
    "publisher": "AkosPapp",
    "repository": {
        "type": "git",
        "url": "https://github.com/AkosPapp/nix-devcontainer.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "workspaceContains:**/flake.nix"
    ],
    "main": "./out/extension.js",
    "files": [
        "out/**/*",
        "templates/**/*",
        "LICENSE*",
        "README.md"
    ],
    "contributes": {
        "commands": [
            {
                "command": "nix-devcontainer.find-flakes",
                "title": "Find Flakes",
                "category": "Nix DevContainer"
            },
            {
                "command": "nix-devcontainer.update-flake",
                "title": "Update Single Flake",
                "category": "Nix DevContainer"
            },
            {
                "command": "nix-devcontainer.update-all-flakes",
                "title": "Update All Flakes",
                "category": "Nix DevContainer"
            },
            {
                "command": "nix-devcontainer.find-and-update-all-flakes",
                "title": "Find and Update All Flakes",
                "category": "Nix DevContainer"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package",
        "install-extension": "code --install-extension nix-devcontainer-0.0.1.vsix"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4",
        "@vscode/vsce": "^2.15.0"
    }
}